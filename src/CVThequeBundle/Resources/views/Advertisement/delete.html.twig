{% extends "CVThequeBundle::layout.html.twig" %}
{% block title %}Supprimer une annonce - {{ parent() }} {% endblock %} 
{% block body %}
<h2>Supprimer une annonce</h2>
<p>Êtes-vous certain de vouloir supprimer l'annonce "{{ advertisement.title }}" ?</p>
<form action="{{ path('delete_advert', {'id': advertisement.id}) }}"	method="post">
  <a href="{{ path('mgblog_show', {'slug': advertisement.slug}) }}" class="btn">
    <i class="icon-chevron-left"></i>Retour à l'annonce
  </a>
  <input type="submit" value="Supprimer" class="btn btn-danger" />
  {{ form_rest(form) }}
</form>
{% endblock %}