{{ form_start(form, {'attr': {'class': ''}}) }}

{{ form_errors(form) }}

<div class='bloc'>
    {{ form_row(form.author) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
</div>

<div class='bloc'>
    {{ form_row(form.category) }}

    <label for="ip_skills">{{ 'form.skills'|trans({}, 'CVThequeBundle') }}</label>
    <div class="skills form-group" 
         data-name='advertSkills' 
         data-supp='Supprimer la compétence' 
         data-skills='[{% for skill in form.advertSkills %}"{{ skill.vars.value.name }}"{% if not loop.last %},{% endif %}{% endfor %}]'>
        
        <div class="skills-content tag-content" aria-live="polite">
            <div class="field inline skills-add">
                <span class="sr-only sr-only-focusable">Entrez la compétence demandée puis appuyez sur Entrée pour l'ajouter</span>
                <input type="text" id="ip_skills" class="ip_skills" minLength="2" maxLength="255" />
                <span class='field-feedback form-control-feedback'><span class='glyphicon'></span></span>
            </div>
        </div>

    </div>
</div>

<ul class="advertSkills"
    data-prototype="{{ form_widget(form.advertSkills.vars.prototype)|e('html_attr') }}">
</ul>

<div class='bloc'>
    {{ form_row(form.image.file) }}
    {{ form_row(form.image.alt) }}
</div>

{{ form_row(form.published) }}
{% if form.created is defined %}
    {{ form_row(form.created) }}
{% endif %}

{{ form_widget(form._token) }}

<div class="form-group">
    {{ form_row(form.save, {'attr': {'class': 'but primary d-block'}}) }}
</div>

{{ form_end(form, {'render_rest': false}) }}