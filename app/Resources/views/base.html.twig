{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="author" content="Nitram Treblig">
		<title>{% block title %}CVthèque {% endblock %}</title>
		{% block stylesheets %}
			{#			<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">#}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		{% endblock %}
	</head>

	<body>
		<section class="main-content {% if not is_granted('IS_AUTHENTICATED_FULLY') %} no-header {% endif %}">

			<header id="header" class="header">
				<nav class="header-content container">
					<a class="logo nav-item" href="{{ path('homepage') }}">CVthèque</a>
					<a class="nav-item">Liste des annonces</a>

					{% if is_granted('ROLE_ADMIN') %}
						<a class="nav-item" href="#" >Configuration de CVTheque (admin)</a>
					{% else %}
						{% if is_granted('ROLE_APPLICANT') %}
							<a class="nav-item" href="#" >Modifier mon CV</a>
						{% endif %}
						{% if is_granted('ROLE_SOCIETY') %}
							<a class="nav-item" href="{{ path('add_advert') }}">Ajouter une annonce</a>
						{% endif %}
					{% endif %}
					{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
						{#<h3>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</h3>#}
						<a class="nav-item" href="{{ path('mg_user_show') }}" >{{ 'profile.show.link'|trans({}, 'MGUserBundle') }}</a>
						<a class="nav-item" href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
					{% endif %}  

					<span class="nav-right">
						<span class="compte nav-item">
							<a class="compte-pseudo">{le_username}</a>
							<span class="deco mini-but">
								<span class="sr-only sr-only-focusable">Se déconnecter</span>
								<span class='glyphicon glyphicon-off'></span>
							</span>
						</span>
					</span>
				</nav>
			</header>

			{#<div class="row">
				<nav id="menu" role="navigation" aria-labelledby="h3menu">
					<h3 id="h3menu" role="heading" aria-level="3">Menu</h3>
					<ul class="nav nav-pills nav-stacked">
						<li><a href="{{ path('homepage') }}">Accueil</a></li>
							{% if is_granted('ROLE_ADMIN') %}
							<li><a href="#" >Configuration de CVTheque (admin)</a></li>
							{% else %}
								{% if is_granted('ROLE_APPLICANT') %}
								<li><a href="#" >Modifier mon CV</a></li>
								{% endif %}
								{% if is_granted('ROLE_SOCIETY') %}
								<li><a href="{{ path('add_advert') }}">Ajouter une annonce</a></li>
								{% endif %}
							{% endif %}
							{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
							<h3>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</h3>
							<li><a href="{{ path('mg_user_show') }}" >{{ 'profile.show.link'|trans({}, 'MGUserBundle') }}</a></li>
							<li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
							{% else %}
							<li><a href="{{ path('mg_society_registration') }}">Créer un compte entreprise</a></li>
							<li><a href="{{ path('mg_applicant_registration') }}">Créer un compte stagiaire</a></li>
							{% endif %}  
					</ul>
				</nav>#}

			<main id="content" class="body-content" role="main" >
				<div class="bandeau dark">
					<div class="container">
						{% block bandeau %}
						{% endblock %} 
					</div>
				</div>

				<div class="container page-content">
					{% block content %}
					{% endblock %} 
				</div>
			</main>
			{#</div>#}

			<hr>

			<footer id="footer">
				<div class="container">
					<p>© {{ 'now'|date('Y') }} Team++</p>
				</div>
			</footer>
		</section>

		{% block javascripts %}
			<script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
			<script src="{{ asset('js/bootstrap.min.js') }}"></script>
		{% endblock %}
	</body>
</html>